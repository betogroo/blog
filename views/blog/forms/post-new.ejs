<form method="POST" action="/blog/post">
    <input type="hidden" name="idUser" value="<%= userLogged.id%>">
    <div class="form-group">
        <label for="title">Título</label>
        <input type="text" class="form-control" name="title" id="title">
    </div>
    <div class="form-group">
        <label for="message">Mensagem</label>
        <textarea class="form-control" name="message" id="message" rows="3"></textarea>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="allowComment" name="allowComment" value="1" checked>
        <label class="form-check-label" for="allowComment">Permitir Comentários</label>
      </div>
    <button type="submit" class="btn btn-primary btn-sm">Postar</button>
</form>